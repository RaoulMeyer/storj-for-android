<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.storj.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BootActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bucket.BucketActivity_"
            android:label="@string/title_activity_bucket"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".bucket.BucketDetailActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".file.FileActivity_"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".account.AccountLinkActivity_" />
        <activity
            android:name=".account.LoginActivity_" />
    </application>

</manifest>